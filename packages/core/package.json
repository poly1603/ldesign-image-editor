{
  "name": "@ldesign/image-editor",
  "version": "0.2.0",
  "description": "Professional image editor library with annotations, filters, crop, and more",
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.2",
    "fast-check": "^3.15.0",
    "jsdom": "^24.0.0",
    "@vitest/coverage-v8": "^1.2.2"
  },
  "publishConfig": {
    "registry": "http://npm.longrise.cn:6286/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nicepkg/image-editor"
  },
  "keywords": [
    "image-editor",
    "canvas",
    "mosaic",
    "filter",
    "crop",
    "annotation",
    "text",
    "drawing",
    "eraser"
  ],
  "author": "LDesign Team",
  "license": "MIT"
}
